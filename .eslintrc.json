{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "next",
        "plugin:prettier/recommended",
        "plugin:tailwindcss/recommended",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint",
        "react",
        "tailwindcss"
    ],
    "rules": {
        "react/prop-types": "off"
    }
}
